{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "components": [
        "./components"
      ],
      "helpers": [
        "./helpers"
      ],
      "hooks": [
        "./hooks"
      ],
      "models": [
        "./models"
      ],
      "views": [
        "./views"
      ]
    }
  }
}
